{
    "name": "Synology Download Station",
    "description": "__MSG_chromeExtensionDescription__",
    "version": "4.0.17",
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "default_locale": "en",
    "homepage_url": "https://github.com/007revad/Synology_Download_Station_Chrome_Extension",
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "images/Icon-16.png",
        "32": "images/Icon-32.png",
        "48": "images/Icon-48.png",
        "128": "images/Icon-128.png"
    },
    "action": {
        "default_icon": {
            "19": "images/Icon-19-disconnected.png",
            "38": "images/Icon-38-disconnected.png"
        },
        "default_title": "__MSG_chromeExtensionName__",
        "default_popup": "popover.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content-scripts/content.js"],
        "css": ["css/cssreset-context-min.css", "css/hud.css"],
        "all_frames": true,
        "run_at": "document_start"
    }],
    "permissions": [
        "alarms",
        "notifications",
        "contextMenus",
        "storage",
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/",
        "https://api.github.com/*"
    ],
    "web_accessible_resources": [{
        "resources": [
            "images/Icon-16.png",
            "images/Icon-19.png",
            "images/Icon-38.png",
            "images/Icon-48.png",
            "images/Icon-128.png",
            "css/img/hud-check.png",
            "css/img/hud-cross.png",
            "css/img/hud-progress.png",
            "css/img/icon-black.png",
            "css/img/icon-black@2x.png",
            "download-dialog.html",
            "js/lib/jquery.js"
        ],
        "matches": ["<all_urls>"]
    }],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
